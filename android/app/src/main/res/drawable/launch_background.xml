<?xml version="1.0" encoding="utf-8"?>
<!-- Zipline Futuristic Launch Screen -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item android:drawable="@drawable/futuristic_gradient" />
    
    <!-- Logo -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/zipline_logo" />
    </item>
    
    <!-- App name text -->
    <item android:gravity="center|bottom" android:bottom="120dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
        </shape>
    </item>
</layer-list>
